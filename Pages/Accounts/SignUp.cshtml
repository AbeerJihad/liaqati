@page
@model liaqati_master.Pages.Accounts.SignUpModel
@{
    Layout = "_LayoutAccounts";
    ViewData["Title"] = "تسجيل الدخول";
}
@section Styles{
    <style>
        @@import url("https://fonts.googleapis.com/css2?family=Almarai:wght@300;400;700;800&display=swap");

        * {
            font-family: "Almarai", sans-serif;
        }

        .divider:after,
        .divider:before {
            content: "";
            flex: 1;
            height: 0.5px;
            background: #000000;
        }

        .login-group {
            height: 45px;
        }

            .login-group input {
                border: 1px solid #70707050;
                padding-left: 35px !important;
            }

                .login-group input:focus {
                    border: 2px solid #be8adc !important;
                    outline: none !important;
                }

            .login-group span {
                width: 35px !important;
            }

        .cursor-pointer {
            cursor: pointer;
        }

        @@media screen and (min-width: 998px) {
            .shape-bg {
                background-size: 80%;
            }

            .bgs {
                background-image: url("/Images/104.png");
                background-repeat: no-repeat;
                background-position: center;
                background-size: cover;
            }
        }

        .bgsss {
            background-color: rgba(255, 255, 255, 0.5);
        }
    </style>
}
<div class="container-fluid p-0 g-0 m-0 bgs">
    <div class="container-xl">
        <div class="row min-vh-100 p-0 g-0">
            <div class="col d-flex justify-content-center align-items-center min-vh-100 shape-bg">
                <form class="p-xl-5 w-100" method="post">
                    <div class="p-5 w-100 bgsss rounded-5">
                        <div class="mb-4 ">
                            <div class="login-group rounded-pill shadow position-relative">
                                <span class="position-absolute end-0 top-0 h-100 d-flex justify-content-center align-items-center text-secondary h5">
                                    @@
                                </span>
                                <input type="text" class="w-100 p-3 rounded-pill h-100" asp-for="InputModel.Email" placeholder="اسم المستخدم/ البريد الالكتروني">
                            </div>
                            <span class="text-danger" asp-validation-for="InputModel.Email"> </span>
                        </div>
                        <div class="mb-4 ">
                            <div class="login-group  rounded-pill shadow position-relative">
                                <span class="position-absolute end-0 top-0 h-100 d-flex justify-content-center align-items-center text-secondary h5">
                                    <i class="bi bi-telephone"></i>
                                </span>
                                <input class="w-100 p-3 rounded-pill h-100" asp-for="InputModel.PhoneNumber" placeholder="رقم الهاتف">
                            </div>
                            <span class="text-danger" asp-validation-for="InputModel.PhoneNumber"> </span>
                        </div>
                        <div class="d-flex mb-4 justify-content-between gap-3">
                            <div>
                                <div class="login-group w-100 rounded-pill shadow position-relative">
                                    <span class="position-absolute end-0 top-0 h-100 d-flex justify-content-center align-items-center text-secondary h5">
                                        <i class="bi bi-person-fill"></i>
                                    </span>
                                    <input type="text" class="w-100 p-3 rounded-pill h-100" asp-for="InputModel.FirstName" placeholder="الاسم الاول">
                                </div>
                                <span class="text-danger" asp-validation-for="InputModel.FirstName"> </span>
                            </div>
                            <div>
                                <div class="login-group w-100 rounded-pill shadow position-relative">
                                    <span class="position-absolute end-0 top-0 h-100 d-flex justify-content-center align-items-center text-secondary h5">
                                        <i class="bi bi-people-fill"></i>
                                    </span>
                                    <input type="text" class="w-100 p-3 rounded-pill h-100" asp-for="InputModel.LastName" placeholder="اسم العائلة">
                                </div>
                                <span class="text-danger" asp-validation-for="InputModel.LastName"> </span>
                            </div>

                        </div>
                        <div class="d-flex justify-content-between gap-3">
                            <div>
                                <div class="login-group w-100 rounded-pill shadow position-relative">
                                    <span class="position-absolute end-0 top-0 h-100 d-flex justify-content-center align-items-center text-secondary h5">
                                        <i class="bi bi-eye"></i>
                                    </span>
                                    <input type="text" class="w-100 p-3 rounded-pill h-100" asp-for="InputModel.Password" placeholder="كلمة المرور">
                                </div>
                                <span class="text-danger" asp-validation-for="InputModel.Password"> </span>
                            </div>
                            <div>
                                <div class="login-group w-100 rounded-pill shadow position-relative">
                                    <span class="position-absolute end-0 top-0 h-100 d-flex justify-content-center align-items-center text-secondary h5">
                                        <i class="bi bi-eye"></i>
                                    </span>
                                    <input type="text" class="w-100 p-3 rounded-pill h-100" asp-for="InputModel.ConfirmPassword" placeholder="تأكيد كلمة المرور">
                                </div>
                                <span class="text-danger" asp-validation-for="InputModel.ConfirmPassword"> </span>
                            </div>
                        </div>
                        <div class="form-check my-2">
                            <input class="form-check-input" asp-for="InputModel.IsAnExpert">
                            <label class="form-check-label" asp-for="InputModel.IsAnExpert"></label>
                        </div>
                        <a class="small m-0 text-decoration-none text-secondary py-2 d-block cursor-pointer fw-bold">
                            هل نسيت كلمة المرور؟
                        </a>
                        <div class="login-group mb-4 rounded-pill position-relative">
                            <span class="position-absolute end-0 top-0 h-100 d-flex justify-content-center align-items-center text-white small">
                                <i class="bi bi-chevron-left text-white"></i>
                            </span>
                            <input type="submit" value="دخول" title="Submit" class="w-100 shadow rounded-pill text-white border-0 h-100" style="background-color: #be8adc" placeholder="اسم المستخدم/ البريد الالكتروني">
                        </div>
                        <p class="small m-0 text-decoration-none text-secondary fw-bold p-2">
                            ليس لديك حساب؟
                            <a href="#" class="text-decoration-none text-dark cursor-pointer">
                                <span class="fw-bold"> مستخدم جديد</span>
                            </a>
                        </p>
                        <div class="divider d-flex align-items-center">
                            <p class="text-center mx-3 mb-0 text-white rounded-circle" style="background-color: #be8adc;width: 30px;height: 30px;">
                                أو
                            </p>
                        </div>
                        <div class="d-flex text-center mt-1 justify-content-center align-content-center align-items-center gap-3">
                            <a href="#" class="text-decoration-none p-2 rounded-circle bg-white shadow" style="width: 45px; height: 45px">
                                <img src="~/Images/facebook.png" class="img-fluid" alt="">
                            </a>
                            <div class="d-flex text-center mt-1 justify-content-center">
                                <a href="#" class="text-decoration-none p-2 rounded-circle bg-white shadow" style="width: 45px; height: 45px">
                                    <img src="~/Images/google.png" class="img-fluid" alt="">
                                </a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col d-none d-lg-block"></div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

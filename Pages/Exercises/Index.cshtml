                                            string id = $"MBodyFoucs{Counter}";

                                            <div class="form-check my-3">
                                                <input class="form-check-input" id="@id" name="bodyfocus" type="checkbox" value="@bdoyfocusitem">
                                                <label class="form-check-label" for="@id">

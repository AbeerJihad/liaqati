                                            {
                                                string id = $"MEquipment{Counter}";


                                                <div class=" form-check my-3 ">
                                                    <input class="form-check-input" id="@id" name="traningtype" type="checkbox" value="@bdoyfocusitem">
                                                    <label class="form-check-label" for="@id">
                                                        @bdoyfocusitem
                                                        <span class="count">()</span>

                                                    </label>
                                                </div>
                                                Counter++;
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>

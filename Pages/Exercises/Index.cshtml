                                        <div class="row mb-2">
                                            <span class="text-secondary mb-1  small">دقائق</span>
                                            <div class="d-flex gap-2 justify-content-center align-items-center">
                                                <input id="Minduration" class="col form-control me-1" type="number" onkeyup="mindurFun()" placeholder="Min" /> <span>-</span>
                                                <input id="Maxduration" class="col form-control" type="number" onkeyup="maxdurFun()" placeholder="Max" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

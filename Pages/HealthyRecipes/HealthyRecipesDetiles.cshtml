<script>
    function repeatCard() {
        let rowForCardLoop = document.getElementById("rowForCardLoop");
        let cardLoop = document.getElementById("cardLoop");
        for (let i = 0; i <= 6; i++) {
            let array = [];
            let newCard = cardLoop.cloneNode(true);
            cardLoop.after(newCard);
            array.push(newCard);
        }
    }

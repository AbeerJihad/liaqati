@page "{id}"
@model liaqati_master.Pages.HealthyRecipes.HealthyRecipesDetilesModel
@{
}

<link href="~/user/css/drinks.css" rel="stylesheet" />


<div class="container-fluid imgHeader position-relative">
    <div class="row bgcolor">
        <div>
            <h1 class="text-white fw-bolder text-center" style="padding:155px;">@Model.HealthyRecipe.MealType </h1>
        </div>
    </div>

</div>

<div class="container mt-3" style="font-size:13px;">
    <div class="row">
        <p class="fs-6 p-4">
            الرئيسية
            <img src="~/user/images/ic_expand_more_24px.png" />
            خدماتنا
            <img src="~/user/images/ic_expand_more_24px.png" />
            وصفات صحية
            <img src="~/user/images/ic_expand_more_24px.png" />
            @Model.HealthyRecipe.MealType
            <img src="~/user/images/ic_expand_more_24px.png" />
            @Model.HealthyRecipe.Title
        </p>
        <div class="col-lg-7  align-self-center">
            <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
                    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
                </div>
                <div class="carousel-inner">
                    @for (int i = 0; i < Model.Files.Count; i++)
                    {
                        var ac = "";
                        if (i == 1) ac = "active";
                        <div class="carousel-item   @ac">
                            <img src="@Model.Files[i].Path" class="d-block carouselImages" alt="...">

                        </div>
                    }
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>

        </div>


        <div class="col-lg-5 justify-content-center align-items-center shadow">
            <div class="p-3">
                <div class="d-flex justify-content-between">
                    <h3>@Model.HealthyRecipe.Title</h3>
                    <div>
                        <img width="25" src="~/user/images/Path 1698.png" />
                        <img width="25" src="~/user/images/Group 1740.png" />
                    </div>
                </div>
                <hr />
                <div class="d-flex">
                    <div class="d-flex ms-3">
                        <img height="15" class="mt-1 ms-1" src="~/user/images/timer-svgrepo-com.png" />
                        <p class="textPurple">

                            تاريخ النشر :
                            <span class="fw-bold">@Model.HealthyRecipe.CreatedDate</span>
                        </p>
                    </div>
                    <div class="d-flex mx-3">
                        <p class="textPurple">الصنف:</p>
                        <p>@Model.HealthyRecipe.MealType</p>
                    </div>


                    <p class="textPurple">التقييم:</p>
                    @for (int i = 0; i <= Model.HealthyRecipe.RatePercentage; i++)
                    {
                        <img height="15" width="15" src="~/user/images/star-svgrepo-com.png" />
                    }
                    <p>(80)</p>
                </div>
                <hr />
                <div>
                    <p class="fs-6">
                        @Html.Raw(Model.HealthyRecipe.Description)
                    </p>
                </div>
                <hr />
                <div class="d-flex ps-md-5 justify-content-between">
                    <div class="d-flex">
                        <img height="20" class="ms-2" src="~/user/images/timer-svgrepo.png" />
                        <p class="fw-bold"> @Model.HealthyRecipe.PrepTime  دقيقة </p>
                    </div>
                    <div class="d-flex">
                        <img height="20" class="ms-2" src="~/user/images/cooking-pot-thin-svgrepo-com.png" />
                        <p class="fw-bold">متوسط</p>
                    </div>
                    <div class="d-flex">
                        <img height="20" class="ms-2" src="~/user/images/calories-svgrepo-com.png" />
                        <p class="fw-bold">
                            @{
                                var x = double.Parse(Model.HealthyRecipe.Total_Carbohydrate.ToString()) + double.Parse(Model.HealthyRecipe.Protein.ToString()) + double.Parse(Model.HealthyRecipe.Calories.ToString());
                            }
                            @x
                            سعرة حرارية
                        </p>
                    </div>

                </div>
                <div class="d-flex">
                    <h5>القيمة الغذائية لكامل الوجبة </h5>
                    <div class="d-flex mt-3 p-2 w-50 justify-content-evenly me-md-3" style="background-color: #F0EFF8;">
                        <div>
                            <p>كالوري</p>
                            <p>@Model.HealthyRecipe.Calories</p>
                        </div>

                        <div>
                            <p>كارب</p>
                            <p>g @Model.HealthyRecipe.Total_Carbohydrate </p>
                        </div>
                        <div>
                            <p>بروتين</p>
                            <p>g @Model.HealthyRecipe.Protein</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container mt-5">
    <div class="row justify-content-around">
        <div class="col-md-3">
            <div class="d-flex">
                <img height="27" width="25" class="mx-2" src="~/user/images/list-clipboard-svgrepo-com.png" />
                <h4>المكونات</h4>
            </div>

            <table class="table">
                <thead>
                    <tr>
                        <th scope="col"> الاسم</th>
                        <th scope="col"> الكمية</th>

                    </tr>
                </thead>
                <tbody>

                    @if(Model.Ingredent is not null)
                    {
                        
                   
                    @for (int i = 0; i < Model.Ingredent.Length - 1; i++)
                    {

                        <tr>
                            @{
                                string[] spolites = Model.Ingredent[i].Split(',');
                            }
                            <td scope="row"> @spolites[0] </td>
                            <td scope="row"> @spolites[1]  @spolites[2] </td>



                        </tr>
                    }
                     }

                </tbody>
            </table>


            @*@for(int i=0; i < Model.Ingredent.Length-1; i++)
            {
            <p>   @Html.Raw(Model.Ingredent[i].Trim())</p>

            }
            *@



            <hr />
        </div>
        <div class="col-md-8">
            <div class="d-flex">
                <img height="27" width="25" class="mx-2" src="~/user/images/list-clipboard-svgrepo-com.png" />
                <h4 class="mb-3">طريقة التحضير</h4>
            </div>
            @if (Model.PreparationMethod is not null)
                    {
                       
            @for (int i = 0; i < Model.PreparationMethod.Length - 1; i++)
            {
                var ii = i + 1;
                <p>  @ii -  @Html.Raw(Model.PreparationMethod[i].Trim())</p>

            }
                    }

        </div>
    </div>
</div>


@page
@model liaqati_master.Pages.SportProgram.IndexModel
<link href="~/css/programdetails.css" rel="stylesheet" />
@section Styles{
    <style>
        @@import url("https://fonts.googleapis.com/css2?family=Almarai:wght@300;400;700;800&display=swap");

        * {
            font-family: "Almarai", sans-serif;
        }

        .bg-white-with-transparent {
            background-color: rgba(255, 255, 255, 0.7) !important;
        }

        .overlay {
            transition: 0.3s;
            background-color: rgba(255, 255, 255, 0.4);
        }

        .hoverable-image:hover .overlay {
            opacity: 0;
        }

        .more-details-btn {
            opacity: 0;
            transition: 0.3s;
        }

        .hoverable-image:hover .more-details-btn {
            opacity: 1;
        }

        .meal-plan {
            transition: 0.3s;
        }

            .meal-plan:hover {
                border: 1px dashed #cb8cef;
            }
    </style>
}

<div class="position-relative w-100  overflow-hidden" style="background-size:cover; height: 70vh;background-image: linear-gradient(#00000060, #00000060),url('/images/pexels-marta-wave-6454071.png')">
    <div class="h-100">
        <div class="container-fluid h-100 p-0 position-absolute start-0 top-0 ">
            <div class="container-xl h-100  d-flex flex-column justify-content-center align-items-center " style="padding-top:120px !important">
                <div class="w-100 mx-auto">
                    <h1 class="text-white text-center py-3 fw-bold">
                        الانظمة الرياضية
                    </h1>


                </div>
            </div>
        </div>
    </div>
</div>




<div class=" container-90 mt-5 min-vh-100">

    <div class="p-0 g-0 row form-search">
        <div class="col-12 my-2 my-lg-0 col-lg-5">
            <input type="text" id="name" name="name" class="form-control rounded-end-0" placeholder="الاسم" />
        </div>
        <div class="col-12 my-2 my-lg-0 col-lg-4">

            <select style="height:50px;" id="selectSpecExpert" class="form-control rounded-end-0">
                <option value="-1"> اختر التخصص </option>

                <option value="اخصائي تغذية"> اخصائي تغذية  </option>
                <option value="مدرب لياقة"> مدرب لياقة  </option>
                <option value="مدرب كارديو"> مدرب كارديو  </option>
                <option value=" مدرب قوة"> مدرب قوة   </option>
            </select>


        </div>
        <div class="col-12 my-2 my-lg-0 col-lg-3">
            <input placeholder="بحث" onclick="SearchExpertFun()" value="بحث" class="form-control rounded-start-0 text-center" style="background-color: #e4dfff" />
        </div>

    </div>


    <div class="row mt-5  p-0 g-0">

        <div class=" col-12  ">
            <div class="d-flex justify-content-between align-items-center px-3">
                <div class="d-flex align-items-center">
                    <div style="width:5px;background-color:#be8adc;height:40px;"></div>
                    <h4 class="fw-bold m-0 m-2 ">جميع الانظمة الرياضية</h4>
                </div>
                <div>
                    <i class="bi bi-arrow-left h4"></i>
                </div>
            </div>
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 p-0 g-0" id="ProgramContainer">
                @for (int i = 0; i < 9; i++)
                {
                    <partial name="_ProgramExpertsSkeletonCard.cshtml" />
                }
            </div>

        </div>
    </div>
</div>






<div class="container-lg mt-3">
    <div class="row p-0 g-0" id="Paging">
        <div class="col p-3 d-flex justify-content-center align-items-center"></div>
    </div>
</div>





@section Scripts{
    <script src="~/jsapi/Pagination.js" asp-append-version="true"></script>
    <script src="~/jsapi/programapi/programmodel.js"></script>
    <script src="~/jsapi/programapi/programmodelapp.js"></script>
  }


@page
@model liaqati_master.Pages.Products.IndexModel
@section Styles{


    <link href="~/user/css/Products.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/user/css/styleicart.css" rel="stylesheet" asp-append-version="true" />

}
<div class="position-relative w-100  overflow-hidden" style=" height: 70vh;background-image: linear-gradient(#00000060, #00000060),url(/images/strong-man-training-gym.png)">

    <div class="h-100">
        <div class="container-fluid h-100 p-0 position-absolute start-0 top-0 ">
            <div class="container-xl h-100  d-flex flex-column justify-content-center align-items-center " style="padding-top:120px !important">
                <div class="w-100">
                    <h1 class="text-white text-center py-3 fw-bold">
                        منتاجاتنا
                    </h1>
                    <form id="formSearch" class="p-0 g-0 row col-lg-10 mx-auto form-search justify-content-center">
                        <div class="col-12 my-2 my-lg-0 col-lg-6">
                            <input type="text" id="searchTearm" class="form-control search rounded-0" name="te" placeholder="ابحث عن منتج" style="height: 3rem" />
                        </div>
                        <div class="col-12 my-lg-0 col-lg-2">
                            <input placeholder="بحث" type="submit" value="بحث" class="form-control text-center rounded-0" style="background-color: #cebfe9; height: 3rem;" />
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
<div class="container-xl p-0 pt-5 ">
    <div class="row g-0 px-2 px-xl-4 justify-content-end pt-5">

        <div class="col-4 col-md-2">
            <select id="lstSort" name="SortBy"
                    class="form-select rounded-0" asp-items="Model.SortList">
                <option value="" selected>ترتيب حسب</option>
            </select>
        </div>
        <div class="col-4 col-md-2">
            <select id="lstCate"
                    class="form-select rounded-0" asp-items="Model.Categories">
                <option value="" selected>نوع المنتج</option>
            </select>
        </div>
    </div>
    <div class="row g-0 p-0">
        <div class="col-12 col-lg-4 order-1 px-lg-5 order-lg-0">

            @await Component.InvokeAsync("GenericComponentProduct",0)
            @await Component.InvokeAsync("GenericComponentProduct",1)
            @await Component.InvokeAsync("GenericComponentProduct",2)
        </div>

        <div class="col-12 col-lg-8  p-0 g-0">
            <div class="row row-cols-1  row-cols-md-2 row-cols-lg-3 p-0 g-0" id="ProductContainer">
            </div>
            <div class="d-flex  justify-content-center align-items-center  g-0" id="NoResult">
            </div>
            <div class="row p-0 g-0" id="Paging">
                <div class="col p-3 d-flex justify-content-end align-items-center"></div>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script src="~/jsapi/Pagination.js" asp-append-version="true"></script>
    <script src="~/jsapi/productsapi/productsmodel.js" asp-append-version="true">
    </script><script src="~/jsapi/productsapi/productsmodelapp.js" asp-append-version="true"></script>
 }




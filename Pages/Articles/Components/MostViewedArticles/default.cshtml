@model List<Article>
<h3 class="mx-5 mt-4 mb-3">الأكثر مشاهدة</h3>
<div class="container-lg px-5 ">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-3 col-sm-6 mt-2">
                <!--mx-md-0 mx-sm-2-->
                <div class="card h-100">
                    <div  class="position-relative">
                        <img style="height:200px" src="@item.Image" class="card-img-top " alt="..." />

                    </div>
                    <div class="card-body">
                        <p class="card-title text-black-50">رشاقة وتغذية</p>
                        <p class="card-text fw-bold">
                            @item.Title
                        </p>
                        <div class="text-start">
                            <img width="20" src="~/images/atricles/share-button-svgrepo-com.png" />
                            @{
                                Favorite favorite = new();

                                <form method="post" asp-area="admin" asp-page="/favorites/create">


                                    <input hidden value="@item.Id" asp-for="@favorite.ArticleId" />
                                    <input hidden value="مقالات" asp-for="@favorite.Type" />

                                    <button type="submit" style="width: 50px; height: 50px; top: 10px; right: 10px"
                                        class="rounded-pill btn-favourite   text-secondary btn position-absolute border bg-white shadow-sm rounded d-flex fw-bold justify-content-center align-items-center align-middle">
                                        <img width="20" src="~/images/atricles/heart-svgrepo-com (1).png" />

                                    </button>

                                </form>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }


    </div>
</div>
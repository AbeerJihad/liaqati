@model List<MealPlans>

@if (Model.Count > 0)
{
    <div class="container mt-5">
        <div class="d-flex mb-4">
            <div class="mx-3" style="height: 40px; width: 4px; background-color: #b9aff5"></div>
            <h2 class="col-auto">أحدث الأنظمةالغذائية</h2>
            <div class="mt-4 mx-4 col" style="height: 2px; width: 50%; background-color: #b9aff5"></div>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <partial name="_MealPlansCard" model="@item" />
            }
        </div>
        <div class="d-flex mt-4">
            <div class="mt-4 mx-4 col" style="height: 2px; width: 50%; background-color: #b9aff5"></div>
            <a asp-page="/mealplan/index" style="background-color: #E4DFFF" class="col-auto text-black rounded-4 h4 fw-bold d-inline-block border-0 py-3 px-4">
                جميع الأنظمةالغذائية
            </a>
        </div>
    </div>
}
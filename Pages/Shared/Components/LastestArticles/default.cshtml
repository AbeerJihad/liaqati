@model List<Article>
<style>
    .sideArticlesImages {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .carouselImages {
        height: 570px;
        width: 100%;
        opacity: 0.9;
        object-fit: cover;
    }

    .carousel-indicators {
        bottom: 0 !important;
    }
</style>
<div class="container  my-5" style="font-size: 13px">
    <div class="d-flex my-4">
        <div class="mx-3" style="height: 40px; width: 4px; background-color: #b9aff5"></div>
        <h2 class="col-auto">أحدث المقالات</h2>
        <div class="mt-4 mx-4 col" style="height: 2px; width: 50%; background-color: #b9aff5"></div>
    </div>
    <div class="row">
        <div class="col-lg-8 align-self-center">
            <div id="carouselExampleCaptions"
                 class="carousel slide"
                 data-bs-ride="carousel">
                <div class="carousel-indicators">
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        var active = i == 0 ? "active" : "";
                        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="@i" class="@active" aria-current="@active" aria-label="Slide @i"></button>
                    }
                </div>
                <div class="carousel-inner">
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        var active = i == 0 ? "active" : "";
                        <div class="carousel-item @active">
                            <img src="~/user/images/221796.png"
                                 class="d-block carouselImages"
                                 alt="..." />
                            <div class="carousel-caption m-0 text-start d-none d-md-block">
                                <p class="text-black-50 fw-bold">رشاقة وتغذية</p>
                                <h6 class="text-dark">
                                    تمارين بالمنزل للتغلب على خشونة الركبة .
                                </h6>
                            </div>
                        </div>
                    }
                </div>

                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span><span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span><span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
        <div class="col-lg-4 justify-content-center align-items-center">
            @foreach (var item in Model)
            {
                <partial name="_ArticlesCard" model="@item"></partial>
            }
        </div>
        <div class="d-flex mt-4">
            <div class="mt-4 mx-4 col" style="height: 2px; width: 50%; background-color: #b9aff5"></div>
            <button style="background-color: #E4DFFF" class="col-auto text-black rounded-4 h4 fw-bold d-inline-block border-0 py-3 px-4">
                لمشاهدة جميع مقالاتنا
            </button>
        </div>
    </div>

</div>

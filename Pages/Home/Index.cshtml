<div class="swiper mySwiper my-3 py-5">
    <div class="swiper-wrapper">
        @foreach (var item in Model.SportProgram)
        {
            <div class="swiper-slide">
                <div class="card border-0 p-0 shadow rounded-top m-0" style="border-radius:15px 0  15px 0;">
                    <div class="position-relative m-0 p-0">
                        <img height="300" src="@item.Image" style="object-fit:fill ; border-radius:15px 0  15px 0;"
                             class="card-img-top p-0 m-0 " alt="..." />
                        <img width="30" height="30" class="position-absolute  " style="top: 30px; right: 10px"
                             src="~/user/images/exercises/heart-svgrepo-com (1).png" alt="" srcset="" />

                    </div>

                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div class="d-flex">
                                @for (int i = 0; i <= item.Services?.RatePercentage / 20; i++)
                                {
                                    <img class="m-0 p-0" width="20" height="20" src="~/user/images/exercises/star-svgrepo-com.png" />
                                }
                            </div>
                            <div>
                                <h5 class="d-inline-block text-danger align-middle ms-1">
                                    @item.Services?.Price?.ToString("c")
                                </h5>
                            </div>
                        </div>
                        <p class="card-text pcolor">
                            برنامج لمدة
                            <span> @item.Length</span>
                            اسابيع
                        </p>
                        <div class=" p-0  d-flex justify-content-between">

                            <p class="card-title ">
                                @item.Services?.Title
                            </p>

                            <a class="btn px-2 py-1  text-white rounded shadow" style="background-color: #B9AFF5;">
                                ابدأ الآن
                                <img class="me-1" height="20" src="~/user/images/exercises/mask group 56.png" />
                            </a>
                        </div>
                    </div>




                </div>
            </div>

        }
    </div>
</div>



@section Scripts{
    <script>
        var options = {
            searchable: false,
            placeholder: "select",
            searchtext: "zoek",
            selectedtext: "geselecteerd",
        };
        NiceSelect.bind(document.getElementById("MySelect"), options);
        var MySelect = document.getElementById("MySelect").addEventListener("change", () =>
            alert(document.getElementById("MySelect").value)
        );

        var navbarToggler = document.getElementById("navbarToggler");
        var navbarCollapse = document.getElementById("navbarCollapse");
        var blurDiv = document.querySelector(".blur-div");
        var closeBtn = document.querySelector(".close");
        navbarToggler.onclick = () => {
            navbarCollapse.classList.add("showNav");
            document.body.classList.add("disable-scroll");
            blurDiv.classList.add("blur");
        };
        closeBtn.onclick = () => {
            Rest();
        };
        function Rest() {
            navbarCollapse.classList.remove("showNav");
            document.body.classList.remove("disable-scroll");
            blurDiv.classList.remove("blur");
        }
        window.onresize = () => {
            Rest();
        };



    </script>

    <script src="~/user/js/swipersliders.js"></script>
}
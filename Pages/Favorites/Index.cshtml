@page
@model liaqati_master.Pages.Favorites.IndexModel
@{
}

@section Styles{
    <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
          rel="stylesheet" />
    <script src="https://unpkg.com/boxicons@2.1.4/dist/boxicons.js"></script>
    <link rel="stylesheet" href="./StartSection.css" />
    <link rel="stylesheet" href="./FooterCSS.css" />
    <link href="~/css/favaretes.css" rel="stylesheet" />
}



<div class="container-fluid imgHeader position-relative"
     style="background-image: url('~/images/Favorite/Group 2011.png')">
    <div class="row bgcolor">
        <div style="padding: 60px; margin-top: 70px">
            <p class="text-center" style="font-size: 55px">المفضلة</p>

            <form action=""
                  method="get"
                  class="p-0 g-0 row col-lg-10 mx-auto form-search justify-content-center">
                <div class="col-12 my-2 my-lg-0 col-lg-6">
                    <input type="text"
                           class="form-control"
                           name="te"
                           placeholder="ابحث عن منتج"
                           style="height: 3rem" />
                </div>

                <div class="col-12 my-lg-0 col-lg-2">
                    <input placeholder="بحث"
                           type="submit"
                           value="بحث"
                           class="form-control text-center"
                           style="background-color: #cebfe9; height: 3rem" />
                </div>
            </form>
        </div>
    </div>
</div>

<div class="container mt-3">
    <div class="row">
        <div class="d-flex my-2">
            <p class="p-1 fw-bold text-secondary">الرئيسية</p>
            <img class="p-1 mt-1"
                 width="20"
                 height="25"
                 src="~/images/Favorite/ic_expand_more_24px.png" />
            <p class="p-1 fw-bold text-secondary">المفضلة</p>
        </div>
        <div class="">
            <div class="table-responsive">
                <table class="table">
                    <thead class="border-0">
                        <tr class="text-center text-secondary"
                            style="background-color: #f0eff8">
                            <th>المنتج</th>
                            <th>الوصف</th>
                            <th>السعر</th>
                            <th>رقم الكوبون</th>
                            <th>إضافة الى السلة</th>
                            <th>الغاء الطلب</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model.Services)
                        {
                            <tr class="text-center">
                                <td>
                                    <img width="90"
                                         src="~/images/Favorite/Screenshot 2023-02-18 174745.png" />
                                </td>
                                <td>  @item.Title  </td>
                                <td> @item.Price?.ToString("c")</td>
                                <td>ــــــــ</td>
                                <td>
                                    <button class="btn">
                                        <img src="~/images/Favorite/cart-3-svgrepo-com.png" />
                                    </button>
                                </td>
                                <td>

                                    <form asp-page-handler="RemoveFavorite" method="post" asp-route-id="@item.Id">

                                        <button class="btn">
                                            <img src="~/images/Favorite/Group 784.png" />
                                        </button>
                                    </form>



                                </td>
                            </tr>

                        }





                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="p-5">
    <div class="col-4 col-md-2">
        <h3 class="m-3 p-3"
            style="border-bottom: 7px solid #b9aff5; width: auto">
            منتجات اخرى
        </h3>
    </div>

    <div class="row p-5 pt-1 justify-content-around mt-3">

        @foreach (var item in Model.Products)
        {
            <!--card1-->
            <div class="col p-3 col-md-6 col-lg-3">
                <div class="shadow p-4 pb-0 position-relative"
                     style="border-radius: 20px">
                    <img src="~/images/Favorite/Screenshot 2023-02-18 174745.png"
                         height="200"
                         class="card-img-top rounded-top"
                         alt="..."
                         style="object-fit: contain" />
                    <img width="28"
                         class="position-absolute"
                         style="top: 10px; right: 10px"
                         src="@item.ImgUrl"
                         alt=""
                         srcset="" />
                    <div class="card-body mt-0 mb-0 px-1">
                        <div class="d-flex justify-content-between">
                            <p class="card-text">#مكملات غذائية</p>
                            <div>
                                <img class="m-0 p-0"
                                     width="10"
                                     height="10"
                                     src="~/images/Favorite/star-svgrepo-com.png" />
                                <img class="m-0 p-0"
                                     width="10"
                                     height="10"
                                     src="~/images/Favorite/star-svgrepo-com.png" />
                                <img class="m-0 p-0"
                                     height="10"
                                     src="~/images/Favorite/star-svgrepo-com.png" />
                                <img class="m-0 p-0"
                                     height="10"
                                     src="~/images/Favorite/star-svgrepo-com.png" />
                                <img class="m-0 p-0"
                                     height="10"
                                     src="~/images/Favorite/star-svgrepo-com.png" />
                            </div>
                        </div>
                        <div class="justify-content-between p-0">
                            <div class="d-flex p-0 justify-content-between">
                                <p class=""> @item.Services!.Title  </p>
                                <div style="background-color: #ffff"
                                     class="rounded-pill shadow rounded d-inline-block fw-bold align-middle">
                                    <img width="28"
                                         height="28"
                                         class="m-3"
                                         src="~/images/Favorite/layer1.png"
                                         alt=""
                                         srcset="" />
                                </div>
                            </div>
                            <h5 class="fw-bold text-danger">  $ @item.Services!.Price  </h5>
                            <div></div>
                        </div>
                    </div>
                </div>
            </div>

        }



    </div>
</div>

@page
@model liaqati_master.Pages.Programs.IndexModel
@{
}


<div class="container-fluid">
    <p>
        <a asp-page="Create" class="btn btn-rounded btn-primary ">
            <span class="btn-icon-start text-primary">
                <i class="fa fa-plus color-info"></i>
            </span>إضافة برنامج
        </a>
    </p>
</div>


<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Exam Toppers</h4>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-responsive-xl">
                    <thead>
                        <tr>
                            <th style="width:50px;">
                                <div class="form-check custom-checkbox checkbox-success check-lg me-3">
                                    <input type="checkbox" class="form-check-input" id="checkAll" required="">
                                    <label class="form-check-label" for="checkAll"></label>
                                </div>
                            </th>
                            <th>
                                <i class="fa fa-user" aria-hidden="true"></i>
                                @Html.DisplayNameFor(model=>model.programs[0].Id)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model=>model.programs[0].Title)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model=>model.programs[0].Price)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model=>model.programs[0].Length)
                            <th>
                                    @Html.DisplayNameFor(model=>model.programs[0].BodyFocus)
                            </th>
                                @* 		<th>
                            @Html.DisplayNameFor(model=>model.programs[0].Description)
                            <th>*@
                            <th>
                                    @Html.DisplayNameFor(model=>model.programs[0].Difficulty)
                            </th>



                            <th>
                                Action
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.programs)
                        {
                            <tr>
                                <td>
                                    <div class="form-check custom-checkbox checkbox-success check-lg me-3">
                                        <input type="checkbox" class="form-check-input" id="customCheckBox3" required="">
                                        <label class="form-check-label" for="customCheckBox3"></label>
                                    </div>
                                </td>
                                <td>
                                    @item.Id
                                </td>
                                <td>
                                    @item.Title
                                </td>
                                <td>
                                    @item.Price
                                </td>
                                <td>
                                    @item.Length
                                </td>
                                <td>
                                    @item.BodyFocus
                                </td>
                                <td>
                                    @item.Difficulty
                                </td>
                                <td>
                                    <a asp-page="./Delete" class="btn btn-danger btn-sm" asp-route-id="@item.Id">
                                        حذف <span class="btn-icon-end"><i class="bi bi-trash-fill"></i></span>
                                    </a>
                                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-info btn-sm"
                                   asp-route-id="@item.Id">
                                        تعديل  <span class="btn-icon-end"><i class="bi bi-pencil-square"></i></span>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
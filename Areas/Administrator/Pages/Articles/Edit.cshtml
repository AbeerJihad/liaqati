@page
@model liaqati_master.Pages.Articles.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Articles</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Articles.Id" />
            <div class="form-group">
                <label asp-for="Articles.Description" class="control-label"></label>
                <input asp-for="Articles.Description" class="form-control" />
                <span asp-validation-for="Articles.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Articles.PostDate" class="control-label"></label>
                <input asp-for="Articles.PostDate" class="form-control" />
                <span asp-validation-for="Articles.PostDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Articles.ViewsNumber" class="control-label"></label>
                <input asp-for="Articles.ViewsNumber" class="form-control" />
                <span asp-validation-for="Articles.ViewsNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Articles.likesNumber" class="control-label"></label>
                <input asp-for="Articles.likesNumber" class="form-control" />
                <span asp-validation-for="Articles.likesNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Articles.CategoryId" class="control-label"></label>
                <select asp-for="Articles.CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                <span asp-validation-for="Articles.CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

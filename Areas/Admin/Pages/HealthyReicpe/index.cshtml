@page
@model liaqati_master.Pages.HealthyReicpe.IndexHealthyModel
@{
}

@section Styles{
    <link href="~/assets/css/Tables.css" rel="stylesheet" />
    <link href="~/lib/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
}

<div class="container-lg ">
    <div class=" ">
        <div class="row justify-content-center">

            <div class="col  py-2 ">
                <div class="products-total d-flex gap-2">
                    <div class="square-product-setting d-inline-block">
                        <a class="icon-grid m-0 grid-layout-view"
                           href="javascript:void(0)" title=""><i class="bi bi-grid"></i>                        </a>
                    </div>
                    <div class="square-product-setting d-inline-block">
                        <a class="icon-grid m-0  list-layout-view" title="" href="javascript:void(0)">
                            <i class="bi bi-list-ul"></i>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col   py-2  d-flex justify-content-end gap-2">
                <button class="btn btn-outline-primary" type="button">استيراد<i class="bi bi-download ms-2"></i></button>
                <button class="btn btn-outline-primary" type="button">تصدير<i class="bi bi-upload ms-2"></i></button>
                <button class="btn btn-primary" type="button">إضافة<i class="bi bi-plus-circle-dotted ms-2"></i></button>
            </div>

            <div class="col-md-12 project-list">
                <div class="card p-3">
                    <div class="row m-0">
                        <div class="col-md-6 p-0">
                            <ul class="nav" id="top-tab">
                                <li class="nav-item">
                                    <a class="nav-link active" data-activity="all" href="#top-home" role="tab">
                                        <i class="bi bi-people-fill h5 my-0 mx-2"></i>
                                        الكل
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#top-profile" data-activity="active">
                                        <i class="bi bi-person-check h5 my-0 mx-2"></i>
                                        نشط
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#top-profile" data-activity="inactive">
                                        <i class="bi bi-person-fill-x h5 my-0 mx-2"></i>
                                        غير نشط
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <div class="col">

                            <div class="feature-products">
                                <form>
                                    <div class="form-group m-0">
                                        <input class="form-control m-0" type="search" placeholder="Search.." data-original-title=""
                                               title="" data-bs-original-title=""><i class="bi bi-search"></i>

                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <div class="row ">
            <div class="col-sm-12">
                <div class="card  border-raduis">
                    <div class="card-header bg-transparent px-0 py-4 ">

                        <h5>المستخدمين</h5>

                    </div>
                    <div class="table-responsive table-hover">
                        <table class="table  table-borderless" id="Tbl">
                            <thead>
                                <tr>
                                    <th scope="col" width="50">
                                        <input class="form-check-input " type="checkbox" id="chk-all" value="">
                                    </th>
                                    <th scope="col" width="100">الصورة</th>
                                    <th scope="col" width="180">العنوان</th>
                                    <th scope="col" width="180">نوع الوجبة</th>
                                    <th scope="col" width="180">النوع الغذائي</th>
                                    <th scope="col" width="180">وقت التحضير</th>
                                    <th scope="col" width="180"> </th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.HealthyRecipes)
                                {

                                    <tr>
                                        <td scope="row">
                                            <label class="d-block">
                                                <input class="checkbox_animated" type="checkbox">
                                            </label>
                                        </td>
                                        <td class="">
                                            <div class="img__box position-relative m-0  rounded-circle">
                                                <img width="40" alt="Mark" class="position-absolute "
                                                     src="@item.Image" />
                                            </div>
                                        </td>

                                        <td>@item.Title</td>
                                        <td>@item.MealType</td>
                                        <td>@item.Price?.ToString("c")</td>
                                        <td>@item.DietaryType</td>
                                        <td>
                                            <div class="d-flex gap-2">
                                                <a asp-page="Details" asp-route-id="@item.Id" class="btn"
                                                   style="background-color: #8763b320; color:#3c077d;  padding: 0.375rem 0.75rem;"
                                                   type="button">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a asp-page="Edit" asp-route-id="@item.Id" class="btn"
                                                   style="background-color: #8763b320; color:#3c077d;  padding: 0.375rem 0.75rem;"
                                                   type="button">
                                                    <i class="bi bi-pencil-square"></i>
                                                </a>
                                                <form method="post" asp-page="Delete" asp-route-id="@item.Id">
                                                    <a onclick="DeleteFun(this)" class="btn"
                                                       style=" background-color: #d22d3d20; color:#d22d3d;padding: 0.375rem 0.75rem;">
                                                        <i class="bi bi-trash"></i>
                                                    </a>
                                                </form>

                                            </div>
                                        </td>
                                    </tr>

                                }


                            </tbody>
                        </table>
                    </div>
                    <partial name="_Manage__data" />
                </div>
            </div>

        </div>
    </div>
    <partial name="_ConfirmDeleteModel" />
    <partial name="_ImageViewer" />

</div>


@section Scripts{
    <script src="~/javascript/script.js"></script>
    <script src="~/javascript/Table.js"></script>
    <script src="~/lib/sweetalert2/sweetalert2.min.js"></script>
    }





@page
@model liaqati_master.Pages.Products.EditProductModel
@{
}

<h4>Meal Plane</h4>
<style>
    .delete-btn {
        width: 30px;
        height: 30px;
        border-radius: 50%;
        top: -12px;
        right: -12px;
    }
</style>
<hr />
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-body">
                    <form method="post" class="form theme-form" enctype="multipart/form-data">
                        <div class="text-danger" asp-validation-summary="All"> </div>
                        <div class="row">
                            <input asp-for="Product.Id" class="form-control" placeholder="">

                            <div class="col">
                                <div class="mb-3">
                                    <label asp-for="Product.Services!.Title"></label>
                                    <input asp-for="Product.Services!.Title" class="form-control" placeholder="">
                                    <span asp-validation-for="Product.Services!.Title" class="text-danger"></span>


                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="mb-3">
                                    <label asp-for="Product.Services!.Description"></label>
                                    <textarea asp-for="Product.Services!.Description" class="form-control" placeholder=""></textarea>
                                    <span asp-validation-for="Product.Services!.Description" class="text-danger"></span>

                                </div>
                            </div>
                        </div>
                        <div class="row">

                            <div class="col-sm-4">
                                <div class="mb-3">
                                    <label asp-for="Product.Services!.Price"></label>
                                    <input asp-for="Product.Services!.Price" class="form-control" placeholder="">
                                    <span asp-validation-for="Product.Services!.Price" class="text-danger"></span>

                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="mb-3">
                                    <label asp-for="Product.Discount"></label>
                                    <input asp-for="Product.Discount" class="form-control" placeholder="">
                                    <span asp-validation-for="Product.Discount" class="text-danger"></span>

                                </div>
                            </div>


                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="mb-3">
                                    <label asp-for="Product.Services!.Category!.Id"></label>
                                    <select asp-for="Product.Services!.Category!.Id" asp-items="Model.CatogeryName" class="form-select">
                                        <option disabled value="-1">Please Select Catogery Name</option>

                                    </select>
                                    <span asp-validation-for="Product.Services!.Category!.Id" class="text-danger"></span>

                                </div>
                            </div>

                            <div class="col-12">
                                <div class="mb-3">
                                    <label asp-for="Images"></label>
                                    <input asp-for="Images" class="form-control" placeholder="" accept="image/*">
                                    <span asp-validation-for="Images" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <h5>مستعرض الصور</h5>
                                    <div class="images-viewer d-flex  gap-4 flex-wrap p-4 border bg-light w-100" style="min-height:100px;" id="imagesViewer">
                                    </div>
                                </div>
                            </div>


                        </div>
                        <div class="row">
                            <div class="col-sm-4">
                                <div class="mb-3">
                                    <button class="btn btn-primary mx-auto col-auto" type="submit"> Save </button>
                                </div>
                            </div>
                        </div>







                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/javascript/uploadfiles.js" asp-append-version="true"></script>
    <script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>
    <script src="~/javascript/richtexteditor.js" asp-append-version="true"></script>
    <script>
        window.onload = () => {
            let imags = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.paths));
            if (imags)
                imags.forEach(p => RenderImages(p))
        }
    </script>
}

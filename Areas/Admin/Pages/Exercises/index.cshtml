@page
@model liaqati_master.Areas.Admin.Pages.Exercises.IndexExerciseModel


@{
    ViewData["Title"] = "قائمة التمارين";
    ViewData["LinkName"] = "Categories";
    var parms = new Dictionary<string, string>
    {
        {nameof( Model.ExerciseQueryParamters.CurPage), Model.ExerciseQueryParamters.CurPage.ToString()},
        {nameof( Model.ExerciseQueryParamters.SortBy), Model.ExerciseQueryParamters.SortBy},
        {nameof( Model.ExerciseQueryParamters.SortOrder), Model.ExerciseQueryParamters.SortOrder},
        {nameof( Model.ExerciseQueryParamters.SearchTearm), Model.ExerciseQueryParamters.SearchTearm},
        {nameof( Model.ExerciseQueryParamters.Title), Model.ExerciseQueryParamters.Title},
        {nameof( Model.ExerciseQueryParamters.Size), Model.ExerciseQueryParamters.Size.ToString()},

    };

    if (Model.ExerciseQueryParamters.SortOrder == "asc")
        parms["SortOrder"] = "desc";
    else
        parms["SortOrder"] = "asc";
}
@section Styles{
    <link rel="stylesheet" type="text/css" href="~/assets/css/Tables.css" asp-append-version="true">
    <link href="~/lib/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
    <link href="~/lib/select2/css/select2.min.css" rel="stylesheet" />
    <link href="~/lib/select2-bootstrap-5-theme/select2-bootstrap-5-theme.rtl.min.css" rel="stylesheet" />
}

<form method="get" class="">
    <div class="offcanvas offcanvas-end" data-bs-backdrop="static" tabindex="-1" id="staticBackdrop" aria-labelledby="staticBackdropLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="staticBackdropLabel">تصفية</h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body pb-5">
            <div class="d-flex flex-column gap-3">

                <div class="d-flex  py-2">
                    <input class="form-control " asp-for="@Model.ExerciseQueryParamters.SearchTearm" id="SearchTearm" name="SearchTearm" type="search" placeholder="بحث" aria-label="Search">
                </div>
                <div class="d-flex ">
                    <select name="Title" class="form-select" asp-items="@Model.Titles" asp-for="@Model.ExerciseQueryParamters.Title" id="single-select-field" data-placeholder="  حدد اسم الصنف" onchange="submit()">
                        <option value=""> حدد اسم التمرين</option>
                    </select>
                </div>
                <div class="d-flex ">
                    <select name="BodyFocus" class="form-select w-100" asp-items="@Model.BodyFocus" asp-for="@Model.ExerciseQueryParamters.BodyFocus" id="multiple-select-BodyFocus" data-placeholder="  حدد اسم الصنف" onchange="submit()" multiple>
                        <option value="" disabled>  حدد تركيز الجسم</option>
                    </select>
                </div>
                <div class="d-flex ">
                    <select name="TraningType" class="form-select w-100" asp-items="@Model.TraningType" asp-for="@Model.ExerciseQueryParamters.TraningType" id="multiple-select-TraningType" data-placeholder="  حدد اسم الصنف" onchange="submit()" multiple>
                        <option value="" disabled>  حدد نوع التمرين</option>
                    </select>
                </div>
                <div class="d-flex  ">
                    <select name="Equipment" class="form-select w-100" asp-items="@Model.Equipment" asp-for="@Model.ExerciseQueryParamters.Equipment" id="multiple-select-Equipment" data-placeholder="  حدد اسم الصنف" onchange="submit()" multiple>
                        <option value="" disabled>  حدد المعدات</option>
                    </select>
                </div>
                <div class="d-flex  ">
                    <select name="Difficulty" class="form-select w-100" asp-items="@Model.Difficulty" asp-for="@Model.ExerciseQueryParamters.Difficulty" id="multiple-select-Difficulty" data-placeholder="  حدد اسم الصنف" onchange="submit()" multiple>
                        <option value="" disabled>  حدد مستوى الصعوبة</option>
                    </select>
                </div>
                <div class="d-flex gap-2">
                    <button class="btn btn-outline-primary me-1" type="submit">إظهار النتائج</button>
                    <button type="button" class="btn btn-primary-gradien" id="single-select-field-clear">إلغاء جميع الفلاتر</button>
                </div>

            </div>
        </div>
    </div>

    <input type="hidden" name="CurPage" asp-for="@Model.ExerciseQueryParamters.CurPage" />
    <div class="container-lg py-4 ">
        <div class="row ">
            <div class="col-sm-12">
                <div class="card p-3 border-raduis">
                    <div class="card-header bg-transparent px-0 py-4 ">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5>
                                @ViewData["Title"] <span style="color:#a566c8">(@Model.QueryPageResult.TotalCount)</span>
                            </h5>
                            <div>
                                <a class="btn   btn-air-primary btn-primary-gradien  shadow" asp-page="./Create">إضافة جديد<i class="bi bi-plus-circle-dotted ms-2"></i></a>
                            </div>

                        </div>
                    </div>
                    <div class="d-flex justify-content-between mb-2 flex-wrap gap-2">
                        <div class="  gap-2">
                            <button class="btn  btn-square btn-edit shadow" type="button" data-bs-toggle="offcanvas" data-bs-target="#staticBackdrop" aria-controls="staticBackdrop">
                                <div class="d-flex justify-content-center  align-items-center  gap-2">
                                    <span>
                                        تصفية البيانات
                                    </span>
                                    <i class='bx bx-filter h4 m-0'></i>
                                </div>
                            </button>
                        </div>
                        <div class=" d-flex justify-content-end align-items-center gap-2">
                            <p class="m-0 h5"> ترتيب حسب :</p>
                            <div class="d-flex justify-content-center  align-items-center  gap-2">
                                <select name="SortBy" class="form-select " style="min-width:200px" asp-items="@Model.SortList" asp-for="@Model.ExerciseQueryParamters.SortBy"></select>
                                <select name="SortOrder" class="form-select" asp-for="@Model.ExerciseQueryParamters.SortOrder">
                                    <option value="asc">أ-ي</option>
                                    <option value="desc">ي-أ</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex mb-2 flex-wrap gap-2 align-items-center">

                        @if (Model.ListOfSelectedFilters is not null)
                        {
                            if (Model.ListOfSelectedFilters.Count > 0)
                            {
                                <h5 class="m-0">الفلاتر المطبقة:</h5>
                                @foreach (var item in Model.ListOfSelectedFilters)
                                {
                                    <a asp-all-route-data="parms" asp-route-key="@item.Item1" asp-route-value="@item.Item2" class="btn btn-light btn-sm">
                                        @item.Item2
                                        <i class="bi bi-x-lg"></i>
                                    </a>
                                }
                            }
                        }

                    </div>
                    <div class="table-responsive table-hover">
                        <table class="table  table-borderless" id="Tbl">
                            <thead>
                                <tr>
                                    <th scope="col" width="50">
                                        <input class="form-check-input " type="checkbox" id="chk-all" value="" id="flexCheckDefault">
                                    </th>
                                    <th scope="col" width="100">الصورة</th>
                                    <th scope="col" width="350">اسم التمرين</th>
                                    <th scope="col" width="120">سعر التمرين </th>
                                    <th scope="col" width="120">نوع التمرين</th>
                                    <th scope="col" width="120">مدة التمرين</th>
                                    <th scope="col" width="120">العمليات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.QueryPageResult.ListOfData is not null)
                                    @if (Model.QueryPageResult.ListOfData.Count() > 0)
                                    {

                                        @foreach (var item in Model.QueryPageResult.ListOfData)
                                        {

                                            <tr>
                                                <td scope="row">
                                                    <label class="d-block">
                                                        <input class="checkbox_animated" type="checkbox">
                                                    </label>
                                                </td>
                                                <td class="">
                                                    <div class="img__box position-relative m-0  rounded-circle">
                                                        <img width="40" alt="" class="position-absolute " src="@item.Image" />
                                                    </div>
                                                </td>


                                                <td>@item.Title</td>
                                                <td>
                                                    @if (item.Price > 0)
                                                    {
                                                        @item.Price?.ToString("c")
                                                    }
                                                    else
                                                    {
                                                        <span>مجانا</span>
                                                    }

                                                </td>
                                                <td>@item.TraningType</td>
                                                <td>@item.Duration</td>
                                                <td>
                                                    <div class="d-flex gap-2">
                                                        <a asp-page="Edit" asp-route-id="@item.Id" class="btn" style="background-color: #8763b320; color:#3c077d;   padding: 0.375rem 0.75rem;" type="button">
                                                            <i class="bi bi-pencil-square"></i>
                                                        </a>
                                                        <form method="post" asp-page="Delete" asp-route-id="@item.Id">
                                                            <a onclick="DeleteFun(this)" class="btn " style=" background-color: #d22d3d20; color:#d22d3d;padding: 0.375rem 0.75rem;"> <i class="bi bi-trash"></i> </a>
                                                        </form>

                                                    </div>
                                                </td>
                                            </tr>

                                        }
                                    }

                                    else
                                    {
                                        <tr>
                                            <td colspan="7">
                                                <div class="d-flex justify-content-center align-items-center flex-column">
                                                    <i class="bi bi-database-fill-slash text-secondary" style="font-size:120px"></i>
                                                    <p>لا يوجد بيانات</p>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                else
                                {
                                    <tr>
                                        <td colspan="7">
                                            <div class="d-flex justify-content-center align-items-center flex-column">
                                                <i class="bi bi-database-fill-slash text-secondary" style="font-size:120px"></i>
                                                <p>لا يوجد بيانات</p>
                                            </div>
                                        </td>
                                    </tr>
                                }

                            </tbody>

                            <tfoot>
                                <tr class="border-top bg-light">

                                    <td colspan="10">
                                        <div class="d-flex justify-content-between align-items-center flex-wrap">
                                            <div>
                                                <span class="d-inline-block me-3 text-sm">
                                                    الحقول من @Model.QueryPageResult.FirstRowOnPage إالى  @Model.QueryPageResult.LastRowOnPage من @Model.QueryPageResult.TotalCount
                                                </span>
                                            </div>
                                            @{
                                                var perv = Model.QueryPageResult.PreviousPage.HasValue ? "" : "disabled";
                                                var next = Model.QueryPageResult.NextPage.HasValue ? "" : "disabled";
                                                var first = (Model.ExerciseQueryParamters.CurPage != 1 && Model.QueryPageResult.TotalPages != 0) ? "" : "disabled";
                                                var last = (Model.ExerciseQueryParamters.CurPage != Model.QueryPageResult.TotalPages && Model.QueryPageResult.TotalPages != 0) ? "" : "disabled";
                                                var firstIndex = Math.Max(Model.ExerciseQueryParamters.CurPage - 2, 1);
                                                var lastIndex = Math.Min(Model.ExerciseQueryParamters.CurPage + 2, Model.QueryPageResult.TotalPages);
                                            }
                                            <div class="d-flex gap-2 justify-content-center align-items-center ">


                                                <div class="d-flex justify-content-center gap-2 align-items-center">
                                                    <label asp-for="@Model.ExerciseQueryParamters.Size" class="text-sm m-0">عدد الصفوف لكل صفحة</label>
                                                    <select name="Size" class="form-select text-sm w-auto" asp-items="@Model.lstPageSize" asp-for="@Model.ExerciseQueryParamters.Size" onchange="submit()">
                                                    </select>
                                                </div>
                                                <nav aria-label="Page navigation example ">
                                                    <ul class="pagination  justify-content-end ">
                                                        @{
                                                            parms["CurPage"] = "1" ?? "";
                                                        }
                                                        <li class="page-item"><a class="page-link @perv" asp-all-route-data="parms" asp-route-key="" asp-route-value=""><i class='bx bxs-chevrons-right'></i></a></li>
                                                        @{
                                                            parms["CurPage"] = Model.QueryPageResult.PreviousPage.ToString() ?? "";
                                                        }
                                                        <li class="page-item"><a class="page-link @perv" asp-all-route-data="parms" asp-route-key="" asp-route-value=""><i class='bx bxs-chevron-right'></i></a></li>
                                                        <li class="page-item">
                                                            <a class="page-link active">
                                                                <p class="d-flex justify-content-center gap-3  align-items-center  m-0  text-sm">
                                                                    <span>  @Model.ExerciseQueryParamters.CurPage</span> من  <span>@Model.QueryPageResult.TotalPages</span>
                                                                </p>
                                                            </a>
                                                        </li>
                                                        @{
                                                            parms["CurPage"] = Model.QueryPageResult.NextPage.ToString() ?? "";
                                                        }
                                                        <li class="page-item"><a class="page-link @next" asp-all-route-data="parms" asp-route-key="" asp-route-value=""><i class='bx bxs-chevron-left'></i></a></li>
                                                        @{
                                                            parms["CurPage"] = Model.QueryPageResult.TotalPages.ToString() ?? "";
                                                        }
                                                        <li class="page-item"><a class="page-link @next" asp-all-route-data="parms" asp-route-key="" asp-route-value=""><i class='bx bxs-chevrons-left'></i></a></li>
                                                    </ul>
                                                </nav>


                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <partial name="_Manage__data" />
                </div>
            </div>

        </div>
        <partial name="_ConfirmDeleteModel" />
        <partial name="_ImageViewer" />

    </div

</form>



@section Scripts{
    <script src="~/javascript/table.js" asp-append-version="true"></script>
    <script src="~/lib/sweetalert2/sweetalert2.min.js"></script>
    <script src="~/javascript/script.js" asp-append-version="true"></script>
    <script src="~/lib/select2/js/select2.full.min.js"></script>
    <script>
        $('#multiple-select-Difficulty').select2({ theme: "bootstrap-5", width: '100%', placeholder: $(this).data('placeholder'), closeOnSelect: false, });
        $('#multiple-select-TraningType').select2({ theme: "bootstrap-5", width: '100%', placeholder: $(this).data('placeholder'), closeOnSelect: false, });
        $('#multiple-select-BodyFocus').select2({ theme: "bootstrap-5", width: '100%', placeholder: $(this).data('placeholder'), closeOnSelect: false, });
        $('#multiple-select-Equipment').select2({ theme: "bootstrap-5", width: '100%', placeholder: $(this).data('placeholder'), closeOnSelect: false, });
        $('#single-select-field').select2({ theme: "bootstrap-5", width: '100%', placeholder: $(this).data('placeholder'), });
        $("#single-select-field-clear").on("click", function () {
            $('#single-select-field').val(null).trigger("change");
            $('#multiple-select-Difficulty').val(null).trigger("change");
            $('#multiple-select-TraningType').val(null).trigger("change");
            $('#multiple-select-BodyFocus').val(null).trigger("change");
            $('#multiple-select-Equipment').val(null).trigger("change");
        });



    </script>
  }









@page
@model liaqati_master.Pages.Articles.CreateModel

@{
    ViewData["Title"] = "Create";
}

}
<h4>إضافة مقالة</h4>
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-body">
                    <div class="form theme-form">
                        <form method="post">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="row">
                                <div class="col">
                                    <div class="mb-3">
                                        <label asp-for="Articles.Title" class="control-label"></label>
                                        <input asp-for="Articles.Title" class="form-control" />
                                        <span asp-validation-for="Articles.Title" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-sm-4">
                                    <div class="mb-3">
                                        <label asp-for="Articles.CategoryId" class="control-label"></label>
                                        <select asp-for="Articles.CategoryId" class="form-control" asp-items="@Model.CategoriesSelect"></select>
                                    </div>
                                </div>

                            </div>
                            <div class="row">
                                <div class="col">
                                    <div class="mb-3">
                                        <label asp-for="Articles.Image" class="control-label"></label>
                                        <input asp-for="Articles.Image" class="form-control" />
                                        <span asp-validation-for="Articles.Image" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <div class="mb-3">
                                        <label asp-for="Articles.Description" class="control-label"></label>
                                        <textarea asp-for="Articles.Description" class="form-control"></textarea>
                                        <span asp-validation-for="Articles.Description" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <div class="text-end">
                                        <input type="submit" class="btn btn-secondary me-3" value="Add" />
                                        <a class="btn btn-danger" asp-page="./index">Cancel</a>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

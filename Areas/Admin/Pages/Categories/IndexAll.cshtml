                    </div>
                </div>
            </div>
            <div class="col  py-2  d-flex justify-content-end gap-2">
                <button class="btn btn-outline-primary" type="button">استيراد<i class="bi bi-download ms-2"></i></button>
                <button class="btn btn-outline-primary" type="button">تصدير<i class="bi bi-upload ms-2"></i></button>
                <a class="btn btn-primary" onclick="ShowModelAddEdit('editModel',@System.Text.Json.JsonSerializer.Serialize(new Category()),false)" type="button">إضافة<i class="bi bi-plus-circle-dotted ms-2"></i></a>
            </div>
            <div class="col-md-12 project-list">
                <div class="card p-3">
                    <div class="row m-0">

                        <div class="col">

                            <div class="feature-products">
                                <form>
                                    <div class="form-group m-0">
                                        <input class="form-control m-0" type="search" placeholder="Search.." data-original-title=""
                                               title="" data-bs-original-title=""><i class="bi bi-search"></i>

                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row ">
            <div class="col-sm-12">
                <div class="card  border-raduis">
                    <div class="card-header bg-transparent px-0 py-4 ">
                        <h5>المستخدمين</h5>
                    </div>
                    <div class="table-responsive table-hover">
                        <table class="table  table-borderless" id="Tbl">
                            <thead>
                                <tr>
                                    <th scope="col" width="50">
                                        <input class="form-check-input " type="checkbox" id="chk-all" value="">
                                    </th>
                                    <th scope="col" width="100">الصورة</th>
                                    <th scope="col">إسم الصنف</th>
                                    <th scope="col">الجدول</th>
                                    <th scope="col" width="150">العملية</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.LstCategory)
                                {
                                    <tr>
                                        <td scope="row">
                                            <label class="d-block">
                                                <input class="checkbox_animated" type="checkbox">
                                            </label>
                                        </td>
                                        <td class="">
                                            <div class="img__box position-relative m-0  ">
                                                <img alt="Mark" class="position-absolute "
                                                     src="@item.Image" />
                                            </div>
                                        </td>
                                        <td>@item.Name</td>
                                        <td>@item.Target</td>
                                        <td>
                                            <div class="d-flex gap-2">
                                                <a asp-page="./Edit" asp-route-Id="@item.Id" class="btn"
                                                   style="background-color: #8763b320; color:#3c077d;   padding: 0.375rem 0.75rem;">
                                                    <i class="bi bi-pencil-square"></i>
                                                </a>
                                                <form method="post" asp-route-id="@item.Id">
                                                    <a class="btn"
                                                       onclick="ConfirmDelete(this)"
                                                       style=" background-color: #d22d3d20; color:#d22d3d;padding: 0.375rem 0.75rem;">
                                                        <i class="bi bi-trash"></i>
                                                    </a>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="d-none manage__data position-fixed  rounded-pill">
                        <div class="h-100 p-20 d-flex gap-2 justify-content-between align-content-center align-items-center">
                            <div class=" d-flex gap-2 justify-content-between align-content-center align-items-center">
                                <span class=" badge rounded-pill bg-danger " id="noOfSelectedItem">0</span>
                                <p class="text-white p-0 m-0 d-none  d-lg-inline">العناصر المحددة</p>
                            </div>
                            <button class="btn btn-pill p-2 px-lg-3 d-flex justify-content-center align-items-center  py-lg-2 text-white"
                                    style="background:#3c3b4a;" type="button">
                                تعديل
                                <i class="bi bi-pencil-square me-lg-2"></i>
                            </button>
                            <button class="btn btn-pill p-2 px-lg-3 d-flex justify-content-center align-items-center  py-lg-2 btn-danger"
                                    id="BtnDelete" data-name="مستخدم" type="button">
                                حذف
                                <i class="bi bi-trash  me-lg-2"></i>
                            </button>
                            <button class="btn btn-pill p-2 px-lg-3 d-flex justify-content-center align-items-center  py-lg-2 btn-danger"
                                    type="button" id="BtnCancelSelection">
                                إلغاء
                                <span class="d-none  d-lg-inline fw-bold"> تحديد </span><i class="bi bi-x-circle  me-lg-2"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <div class="modal fade" id="modalConfirmation" tabindex="-1" aria-labelledby="modalConfirmation" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">تأكيد الجذف</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p class="confirm-massage"></p>
                    <div class="mb-3">
                        <label for="confirmText" class="fw-normal">اكتب <strong>تأكيد</strong> للمضي قدمًا في الطلب:</label>
                        <input type="text" class="form-control" placeholder="تأكيد" id="confirmText">
                    </div>
                </div>
                <div class="modal-footer d-flex justify-content-between">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إغلاق</button>
                    <button type="button" class="btn btn-primary" id="BtnConfirmDelete" disabled>حذف</button>
                </div>
            </div>
        </div>
    </div>
    <div class="image__viewer d-none flex-column justify-content-center align-items-center position-fixed min-vw-100 top-0 start-0 min-vh-100" style="z-index:1000">
        <div class="" style="width:600px;">
            <div class="d-flex justify-content-between align-items-center p-3">
                <button id="BtnClose" class="btn bg-white rounded-circle "> <i class="bi bi-x"></i></button>
                <p class="title p-0 m-0 text-white h5"></p>
            </div>
            <div class="img__box2">
                <img src="" alt="" class="img-fluid">
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<form id="frmCRUD" method="post">
    <div class="modal fade" id="editModel" tabindex="-1" aria-labelledby="editLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="editLabel">Modal title</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Category.Id" class="control-label"></label>
                        <input asp-for="Category.Id" class="form-control" />
                        <span asp-validation-for="Category.Id" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Category.Name" class="control-label"></label>
                        <input asp-for="Category.Name" class="form-control" />
                        <span asp-validation-for="Category.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Category.Target" class="control-label"></label>
                        <select asp-items="Html.GetEnumSelectList<Target>()" class="form-control"></select>
                        <span asp-validation-for="Category.Target" class="text-danger"></span>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button id="ptnedit" type="submit" class="btn btn-primary" asp-page-handler="Edit">Save</button>
                    <button id="ptnadd" type="submit" class="btn btn-primary" asp-page-handler="Add">Save</button>
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/@@sweetalert2/theme-dark@4/dark.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        @{
            await Html.RenderPartialAsync("_tables");
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
            await Html.RenderPartialAsync("_ConfirmDelete");

        }
    <script>

        function ShowModelDEtails(modelid, dataObj) {
            let modelElm = document.getElementById(modelid);
            var myModal = new bootstrap.Modal(modelElm, {
                keyboard: false
            })
            if (dataObj !== null) {
                alert("a")
                modelElm.querySelector('#CategoryId').textContent = dataObj.Id;
                modelElm.querySelector('#CategoryName').textContent = dataObj.Name
                modelElm.querySelector('#CategoryTarget').textContent = dataObj.Target;
            }
            alert("a")

            myModal.toggle()
        }

        function ShowModelAddEdit(modelid, dataObj, isedit = false) {
            let modelElm = document.getElementById(modelid);
            var myModal = new bootstrap.Modal(modelElm, {
                keyboard: false
            })

            modelElm.querySelectorAll('span.field-validation-error').forEach((obj, i, a) => a[i].innerHTML = '');


            if (dataObj !== null) {
                modelElm.querySelector('#Category_Id').value = dataObj.Id;
                modelElm.querySelector('#Category_Name').value = dataObj.Name;
                //modelElm.querySelector('#Category_Target').value = dataObj.Target;


            }

            if (!modelid.startsWith('Detail')) {

                toggleModelAction(modelElm, isedit);
            }

            myModal.toggle()
        }

        function toggleModelAction(modelElm, isedit) {
            if (isedit === true) {
                //  modelElm.querySelector('#ptnadd').hidden = true;
                //  modelElm.querySelector('#ptnedit').hidden = false;
                //   modelElm.querySelector('div.modal-header h5.modal-title').innerHTML = "Edit Customer";

                modelElm.querySelector('#Category_Id').readOnly = true;
                modelElm.querySelector('#Category_Id').style.color = "#c0c0c0";

            }
            else {
                //        modelElm.querySelector('#ptnadd').hidden = false;
                //          modelElm.querySelector('#ptnedit').hidden = true;
                //  modelElm.querySelector('div.modal-header h5.modal-title').innerHTML = "Add Customer";
                modelElm.querySelector('#Category_Id').readOnly = false;
                modelElm.querySelector('#Category_Id').style.color = "#000";
            }
        }

        //$.validator.unobtrusive.parse("#frmCRUD");
    </script>

        @if (Model.showModel != IndexAllModel.ShowModelCat.None)
        {
        <script>
            let modelElm = document.getElementById('editModel');
            var myModal = new bootstrap.Modal(modelElm, { keyboard: false });
            myModal.show();
            toggleModelAction(modelElm, @((Model.showModel == IndexAllModel.ShowModelCat.Edit).ToString().ToLower()));
        </script>
        }
}

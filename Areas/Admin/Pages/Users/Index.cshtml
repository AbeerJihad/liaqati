@page
@model liaqati_master.Areas.Administrator.Pages.Users.IndexModel
@{
    ViewData["Title"] = "قائمة الأصناف";
    ViewData["LinkName"] = "Categories";
}
@section Styles{
    <link rel="stylesheet" type="text/css" href="~/assets/css/Tables.css" asp-append-version="true">
    <link href="~/lib/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
}
<div class="container-lg ">
    <div class="">
        <div class="row justify-content-center">

            <div class="col-md-12 project-list">
                <div class="card p-3">
                    <div class="row m-0">
                        <div class="col-md-6 p-0">
                            <ul class="nav" id="top-tab">
                                <li class="nav-item">
                                    <a class="nav-link active" data-activity="all" href="#top-home" role="tab">
                                        <i class="bi bi-people-fill h5 my-0 mx-2"></i>
                                        الكل
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#top-profile" data-activity="active">
                                        <i class="bi bi-person-check h5 my-0 mx-2"></i>
                                        نشط
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#top-profile" data-activity="inactive">
                                        <i class="bi bi-person-fill-x h5 my-0 mx-2"></i>
                                        غير نشط
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <div class="col">

                            <div class="feature-products">
                                <form>
                                    <div class="form-group m-0">
                                        <input class="form-control m-0" type="search" placeholder="Search.." data-original-title=""
                                               title="" data-bs-original-title=""><i class="bi bi-search"></i>

                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <div class="row ">
            <div class="col-sm-12">
                <div class="card p-3 border-raduis">
                    <div class="card-header bg-transparent px-0 py-4 ">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5>@ViewData["Title"]</h5>
                            <a class="btn btn-primary" asp-page="./Create">إضافة جديد<i class="bi bi-plus-circle-dotted ms-2"></i></a>
                        </div>


                    </div>
                    <div class="table-responsive table-hover">
                        <table class="table  table-borderless" id="Tbl">
                            <thead>
                                <tr>
                                    <th scope="col" width="50">
                                        <input class="form-check-input " type="checkbox" id="chk-all" value="" id="flexCheckDefault">
                                    </th>
                                    <th scope="col" width="100">الصورة</th>
                                    <th scope="col" width="200">الإسم الكامل</th>
                                    <th scope="col">الإيميل</th>
                                    <th scope="col" width="130">العمر</th>
                                    <th scope="col" width="180">حالة النشاط</th>
                                    <th scope="col" width="180">الجنس</th>
                                    <th scope="col" width="150">العملية</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Users)
                                {
                                    <tr>
                                        <td scope="row">
                                            <label class="d-block">
                                                <input class="checkbox_animated" type="checkbox">
                                            </label>
                                        </td>
                                        <td class="">
                                            <div class="img__box position-relative m-0  rounded-circle">
                                                <img alt="Mark" class="position-absolute "
                                                     src="@item.Photo" />
                                            </div>
                                        </td>
                                        <td>@string.Concat(item.Fname,' ',item.Lname)</td>
                                        <td>@item.Email</td>
                                        <td>@(DateTime.Now.Year - item.DateOfBirth?.Year)</td>
                                        <td>@item.Active</td>
                                        <td>@item.Gender.ToString()</td>
                                        <td>
                                            <div class="d-flex gap-2">
                                                <button class="btn"
                                                        style="background-color: #8763b320; color:#3c077d;   padding: 0.375rem 0.75rem;"
                                                        type="button">
                                                    <i class="bi bi-pencil-square"></i>
                                                </button>
                                                <button class="btn"
                                                        style=" background-color: #d22d3d20; color:#d22d3d;padding: 0.375rem 0.75rem;"
                                                        type="button">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                    <div class="  d-none manage__data position-fixed    rounded-pill">
                        <div class="h-100 p-20 d-flex gap-2 justify-content-between align-content-center align-items-center">
                            <div class=" d-flex gap-2 justify-content-between align-content-center align-items-center">
                                <span class=" badge rounded-pill bg-danger " id="noOfSelectedItem">0</span>
                                <p class="text-white p-0 m-0 d-none  d-lg-inline">العناصر المحددة</p>
                            </div>
                            <button class="btn btn-pill p-2 px-lg-3 d-flex justify-content-center align-items-center  py-lg-2 text-white"
                                    style="background:#3c3b4a;" type="button">
                                تعديل
                                <i class="bi bi-pencil-square me-lg-2"></i>
                            </button>
                            <button class="btn btn-pill p-2 px-lg-3 d-flex justify-content-center align-items-center  py-lg-2 btn-danger"
                                    id="BtnDelete" data-name="مستخدم" type="button">
                                حذف
                                <i class="bi bi-trash  me-lg-2"></i>
                            </button>
                            <button class="btn btn-pill p-2 px-lg-3 d-flex justify-content-center align-items-center  py-lg-2 btn-danger"
                                    type="button" id="BtnCancelSelection">
                                إلغاء
                                <span class="d-none  d-lg-inline fw-bold"> تحديد </span><i class="bi bi-x-circle  me-lg-2"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <div class="modal fade" id="modalConfirmation" tabindex="-1" aria-labelledby="modalConfirmation" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">تأكيد الجذف</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p class="confirm-massage"></p>
                    <div class="mb-3">
                        <label for="confirmText" class="fw-normal">اكتب <strong>تأكيد</strong> للمضي قدمًا في الطلب:</label>
                        <input type="text" class="form-control" placeholder="تأكيد" id="confirmText">
                    </div>
                </div>
                <div class="modal-footer d-flex justify-content-between">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إغلاق</button>
                    <button type="button" class="btn btn-primary" id="BtnConfirmDelete" disabled>حذف</button>
                </div>
            </div>
        </div>
    </div>
    <div class="image__viewer d-none flex-column justify-content-center align-items-center position-fixed min-vw-100 top-0 start-0 min-vh-100">
        <div class="" style="width:600px;">
            <div class="d-flex justify-content-between align-items-center p-3">
                <button id="BtnClose" class="btn bg-white rounded-circle "> <i class="bi bi-x"></i></button>
                <p class="title p-0 m-0 text-white h5"></p>
            </div>
            <div class="img__box2">
                <img src="" alt="" class="img-fluid">
            </div>
        </div>

    </div>

</div>




@section Scripts{
    <script src="~/javascript/table.js" asp-append-version="true"></script>
    <script src="~/lib/sweetalert2/sweetalert2.min.js"></script>
    <script src="~/javascript/script.js" asp-append-version="true"></script>
  }

                    <form asp-page-handler="EditProgram" method="post" class="form theme-form">

                        <input name="Id" value="@Model.SportsProgram.Id" id="IdProg" hidden />
                        <input  asp-for="SportsProgram.Id" hidden />

                        <div class="row">
                            <div class="col-12 col-md-6">

@page
@model liaqati_master.Areas.Admin.Pages.Programs.IndexProgramModel
@{
    ViewData["Title"] = "قائمة البرامج";
    ViewData["LinkName"] = "Programs";
}
@section Styles{
    <link rel="stylesheet" type="text/css" href="~/assets/css/Tables.css" asp-append-version="true">
    <link href="~/lib/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
}

<div class="container-lg ">
    <div class=" ">
        <div class="row ">
            <div class="col-sm-12">
                <div class="card p-3 border-raduis">
                    <div class="card-header bg-transparent px-0 py-4 ">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5>@ViewData["Title"]</h5>
                            <a class="btn btn-primary" asp-page="./Create">إضافة جديد<i class="bi bi-plus-circle-dotted ms-2"></i></a>
                        </div>
                    </div>
                    <div class="table-responsive table-hover">
                        <table class="table  table-borderless" id="Tbl">
                            <thead>
                                <tr>
                                    <th scope="col" width="50">
                                        <input class="form-check-input " type="checkbox" id="chk-all" value="">
                                    </th>
                                    <th scope="col" width="100">الصورة</th>
                                    <th scope="col" width="350">العنوان</th>
                                    <th scope="col" width="180">السعر</th>
                                    <th scope="col" width="180">المدة </th>
                                    <th scope="col" width="180">الصعوبة</th>
                                    <th scope="col" width="150">العمليات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Programs)
                                {

                                    <tr>
                                        <td scope="row">
                                            <label class="d-block">
                                                <input class="checkbox_animated" type="checkbox">
                                            </label>
                                        </td>
                                        <td class="">
                                            <div class="img__box position-relative m-0  rounded-circle">
                                                <img width="40" alt="Mark" class="position-absolute "
                                                     src="https://t4.ftcdn.net/jpg/03/64/21/11/240_F_364211147_1qgLVxv1Tcq0Ohz3FawUfrtONzz8nq3e.jpg" />
                                            </div>
                                        </td>
                                        <td>@item.Services!.Title</td>
                                        <td>@item.Services!.Price?.ToString("c")</td>
                                        <td>@item.Length   اسابيع</td>
                                        <td>

                                            @if (item.Difficulty == 1)
                                            {
                                                <span> سهل </span>
                                            }
                                            else if (item.Difficulty == 2)
                                            {
                                                <span> متوسط </span>

                                            }
                                            else
                                            {
                                                <span> صعب </span>

                                            }





                                        </td>

                                        <td>
                                            <div class="d-flex gap-2">
                                                <a asp-page="Edit" asp-route-id="@item.Id" class="btn"
                                                   style="background-color: #8763b320; color:#3c077d;   padding: 0.375rem 0.75rem;"
                                                   type="button">
                                                    <i class="bi bi-pencil-square"></i>
                                                </a>
                                                <form method="post" asp-page="Delete" asp-route-id="@item.Id">
                                                    <button hidden type="submit"></button>
                                                    <a onclick="DeleteFun(this)" class="btn" style=" background-color: #d22d3d20; color:#d22d3d;padding: 0.375rem 0.75rem;"> <i class="bi bi-trash"></i> </a>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                    <partial name="_Manage__data" />
                </div>
            </div>

        </div>
    </div>
    <partial name="_ConfirmDeleteModel" />
    <partial name="_ImageViewer" />
</div>



@section Scripts{
    <script src="~/javascript/table.js" asp-append-version="true"></script>
    <script src="~/lib/sweetalert2/sweetalert2.min.js"></script>
    <script src="~/javascript/script.js" asp-append-version="true"></script>
  }





